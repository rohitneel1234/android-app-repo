<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.AboutActivity">

    <RelativeLayout
        android:id="@+id/rlAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/aboutBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp"/>

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/frag_tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="About MediaStore"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/rlAbout"
        android:layout_marginTop="55dp">

        <RelativeLayout
            android:id="@+id/rlTopScreen"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="#0028af"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:elevation="0dp"
            android:src="@mipmap/app_logo"
            tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="MediaStore v1.0.1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/input_login"
        android:layout_marginStart="85dp"
        android:layout_below="@+id/circleImage"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/txtHeadline"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/txtAppName"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:text="Media storage app for users using the\n\t\t\t\t\
        google cloud platform."
        android:textColor="@color/input_login"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/txtHeadline"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="\tThe core features of this app include:\n\n"
        android:textColor="@color/alert"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtFeatures"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/txtHeadline"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        android:lineSpacingExtra="5dp"
        android:text="
        1. Log in and sign up\n
        3. Update profile details\n
        5. Photo editor and photo capture\n
        6. Tools for cropping,trimming,\n
             stretching,cloning,adding text\n
             and filters for images\n
        7. Upload images/videos on cloud\n
        8. Display images/videos on layout\n
        9. Dark theme"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Support"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@id/txtFeatures"/>
        <View
            android:id="@+id/view_divider"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_below="@id/txtSupport"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_divider"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="You can reach us at rohitneel007@gmail.com"
            />

    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>